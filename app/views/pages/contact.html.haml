.skewed-header
  .header-bg{ style: "background-image: url(#{image_path 'backgrounds/contact.jpg'}); background-position: center;" }
  .skewed-header-wrapper
    .skewed-header-content
      .heading-wrapper
        %h1
          Contact
      .links-wrapper
        .nav-link
          = link_to "Home", root_path
        .nav-link
          = link_to "About", about_path
        .nav-link
          = link_to "Menu", menu_path
        .nav-link
          = link_to "Contact", contact_path
.page-container
  .contact-grid-wrapper
    .comapany-metadata-sidebar-wrapper
      .logo
        = image_tag("logos/decamp-dark.png", alt: "Logo")
      .company-details-wrapper
        %i.fas.fa-map-marker-alt
        .address
          123 Any St
          %br
          Scottsdale, Az, 85251
      .company-details-wrapper
        %i.fas.fa-phone-volume
        .phone
          555 555 5555
      .company-details-wrapper
        %i.far.fa-clock
        .time
          10 AM - MIDNIGHT
    .form
      .form-group
        %input{type: 'text', id: 'fullname', placeholder: 'Your Name'}
        %label{for: "fullname"}
          Your name
      .form-group
        %input{type: 'email', id: 'email', placeholder: 'Your Email'}
        %label{for: "email"}
          Your Email
      .form-group
        %textarea{type: 'text', id: 'message', placeholder: 'Message'}
        %label{ :for => "massage" }
          Message
      .spacer10
      .centered-btn-wrapper
        %button{type: 'submit', class: 'btn'}
          Send
.spacer60
.footer
  .logo-footer
    = image_tag("logos/decamp-fantastic-fries-logo-white.png", alt: "Logo")
  .footer-phone-hours
    %span.phone
      555 555 5555
    %span.hours
      10 am - midnight
  .links-wrapper
    .nav-link
      = link_to "Home", root_path
    .nav-link
      = link_to "About", about_path
    .nav-link
      = link_to "Menu", menu_path
    .nav-link
      = link_to "Contact", contact_path
